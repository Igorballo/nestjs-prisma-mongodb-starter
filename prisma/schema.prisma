generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Supplier {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  location String
  products Product[]
}

model Product {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  description String
  price Int
  supplierId String @map("_supplierId") // Utilise @map pour sp√©cifier le mappage
  supplier Supplier @relation(fields: [supplierId], references: [id])
  createdAt DateTime @default(now())
}